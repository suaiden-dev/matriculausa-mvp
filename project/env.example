# ========================================
# CONFIGURAÇÃO DO STRIPE CONNECT
# ========================================

# Chaves principais do Stripe (obrigatórias)
STRIPE_SECRET_KEY=sk_test_... ou sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_test_... ou pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Configuração do Stripe Connect (obrigatória)
STRIPE_CONNECT_CLIENT_ID=ca_... # Obtido no dashboard do Stripe

# URLs das APIs (opcionais - têm valores padrão)
STRIPE_API_BASE_URL=https://api.stripe.com
STRIPE_CONNECT_API_BASE_URL=https://connect.stripe.com

# URL de redirecionamento padrão (opcional)
STRIPE_CONNECT_DEFAULT_REDIRECT_URI=https://seu-dominio.com/auth/stripe-connect/callback

# ========================================
# CONFIGURAÇÃO DO SUPABASE
# ========================================

SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua-chave-anonima
SUPABASE_SERVICE_ROLE_KEY=sua-chave-service-role

# ========================================
# CONFIGURAÇÃO DO POSTGRESQL (ZELLE PAYMENTS)
# ========================================

# Configurações do banco PostgreSQL para histórico de pagamentos Zelle
POSTGRES_HOST=212.1.213.163
POSTGRES_PORT=5432
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=61cedf22a8e02d92aefb3025997cc3d2
POSTGRES_DATABASE=n8n_utility
POSTGRES_SCHEMA=public
POSTGRES_TABLE=zelle_payment_history

# ========================================
# CONFIGURAÇÃO DO AMBIENTE
# ========================================

# Ambiente: development, staging, production
NODE_ENV=development

# ========================================
# INSTRUÇÕES DE CONFIGURAÇÃO
# ========================================

# 1. Copie este arquivo para .env
# 2. Preencha os valores reais
